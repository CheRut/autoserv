<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.garage.autoservice.ui.PlannedRepairJobControllerJFX">
    <center>
        <TableView fx:id="plannedRepairJobTable">
            <columns>
                <TableColumn fx:id="jobNameColumn" text="Job Name"/>
                <TableColumn fx:id="cardNumberColumn" text="Card Number (Part)"/>
                <TableColumn fx:id="fluidTypeColumn" text="Card Number (Fluid)"/>
                <TableColumn fx:id="serialNumberColumn" text="Serial Number"/>
                <TableColumn fx:id="remainingMileageColumn" text="Remaining Mileage"/>
                <TableColumn fx:id="remainingTimeColumn" text="Remaining Time"/>
                <TableColumn fx:id="orderNumberColumn" text="Order Number"/>
                <TableColumn fx:id="notesColumn" text="Notes"/>
            </columns>
        </TableView>
    </center>
    <right>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="jobNameField" promptText="Job Name"/>
            <TextField fx:id="cardNumberField" promptText="Card Number (Part)"/>
            <TextField fx:id="fluidTypeField" promptText="Card Number (Fluid)"/>
            <TextField fx:id="serialNumberField" promptText="Serial Number"/>
            <TextField fx:id="remainingMileageField" promptText="Remaining Mileage"/>
            <TextField fx:id="remainingTimeField" promptText="Remaining Time"/>
            <TextField fx:id="orderNumberField" promptText="Order Number"/>
            <TextArea fx:id="notesField" promptText="Notes"/>
            <CheckBox fx:id="inParkCheckBox" text="Work done in park"/>
        </VBox>
    </right>
    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="completeJobButton" text="Complete Job" disable="true"/>
            <Button fx:id="addButton" text="Add" onAction="#addPlannedRepairJob"/>
            <Button fx:id="deleteButton" text="Delete" onAction="#deletePlannedRepairJob"/>
            <Button fx:id="editButton" text="Edit" onAction="#editPlannedRepairJob" disable="true" />
        </HBox>
    </bottom>
</BorderPane>
